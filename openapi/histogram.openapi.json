{
  "openapi": "3.0.0",
  "info": {
    "title": "histogram",
    "version": "0.0.0",
    "x-schema-identifier": "histogram",
    "x-schema-kind": "composable",
    "x-schema-variant": "panelcfg"
  },
  "paths": {},
  "components": {
    "schemas": {
      "Options": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "legend",
          "tooltip"
        ],
        "properties": {
          "bucketCount": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "description": "Bucket count (approx)",
            "default": 30
          },
          "bucketSize": {
            "type": "integer",
            "description": "Size of each bucket"
          },
          "bucketOffset": {
            "type": "number",
            "description": "Offset buckets by this amount",
            "default": 0
          },
          "legend": {
            "$ref": "#/components/schemas/VizLegendOptions"
          },
          "tooltip": {
            "$ref": "#/components/schemas/VizTooltipOptions"
          },
          "combine": {
            "type": "boolean",
            "description": "Combines multiple series into a single histogram"
          }
        }
      },
      "FieldConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "lineWidth": {
            "type": "integer",
            "maximum": 10,
            "description": "Controls line width of the bars.",
            "default": 1
          },
          "fillOpacity": {
            "type": "integer",
            "maximum": 100,
            "description": "Controls the fill opacity of the bars.",
            "default": 80
          },
          "axisPlacement": {
            "$ref": "#/components/schemas/AxisPlacement"
          },
          "axisColorMode": {
            "$ref": "#/components/schemas/AxisColorMode"
          },
          "axisLabel": {
            "type": "string"
          },
          "axisWidth": {
            "type": "number"
          },
          "axisSoftMin": {
            "type": "number"
          },
          "axisSoftMax": {
            "type": "number"
          },
          "axisGridShow": {
            "type": "boolean"
          },
          "scaleDistribution": {
            "$ref": "#/components/schemas/ScaleDistributionConfig"
          },
          "axisCenteredZero": {
            "type": "boolean"
          },
          "hideFrom": {
            "$ref": "#/components/schemas/HideSeriesConfig"
          },
          "stacking": {
            "$ref": "#/components/schemas/StackingConfig"
          },
          "gradientMode": {
            "$ref": "#/components/schemas/GraphGradientMode",
            "description": "Set the mode of the gradient fill. Fill gradient is based on the line color. To change the color, use the standard color scheme field option.\nGradient appearance is influenced by the Fill opacity setting.",
            "default": "none"
          },
          "axisBorderShow": {
            "type": "boolean"
          }
        }
      },
      "VizLegendOptions": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "displayMode",
          "placement",
          "showLegend",
          "calcs"
        ],
        "properties": {
          "displayMode": {
            "$ref": "#/components/schemas/LegendDisplayMode",
            "default": "list"
          },
          "placement": {
            "$ref": "#/components/schemas/LegendPlacement",
            "default": "bottom"
          },
          "showLegend": {
            "type": "boolean"
          },
          "asTable": {
            "type": "boolean"
          },
          "isVisible": {
            "type": "boolean"
          },
          "sortBy": {
            "type": "string"
          },
          "sortDesc": {
            "type": "boolean"
          },
          "width": {
            "type": "number"
          },
          "calcs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        },
        "description": "TODO docs"
      },
      "VizTooltipOptions": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "mode",
          "sort"
        ],
        "properties": {
          "mode": {
            "$ref": "#/components/schemas/TooltipDisplayMode"
          },
          "sort": {
            "$ref": "#/components/schemas/SortOrder"
          },
          "maxWidth": {
            "type": "number"
          },
          "maxHeight": {
            "type": "number"
          }
        },
        "description": "TODO docs"
      },
      "AxisPlacement": {
        "enum": [
          "auto",
          "top",
          "right",
          "bottom",
          "left",
          "hidden"
        ],
        "description": "TODO docs"
      },
      "AxisColorMode": {
        "enum": [
          "text",
          "series"
        ],
        "description": "TODO docs"
      },
      "ScaleDistributionConfig": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "$ref": "#/components/schemas/ScaleDistribution"
          },
          "log": {
            "type": "number"
          },
          "linearThreshold": {
            "type": "number"
          }
        },
        "description": "TODO docs"
      },
      "HideSeriesConfig": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "tooltip",
          "legend",
          "viz"
        ],
        "properties": {
          "tooltip": {
            "type": "boolean"
          },
          "legend": {
            "type": "boolean"
          },
          "viz": {
            "type": "boolean"
          }
        },
        "description": "TODO docs"
      },
      "StackingConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "mode": {
            "$ref": "#/components/schemas/StackingMode"
          },
          "group": {
            "type": "string"
          }
        },
        "description": "TODO docs"
      },
      "GraphGradientMode": {
        "enum": [
          "none",
          "opacity",
          "hue",
          "scheme"
        ],
        "description": "TODO docs"
      },
      "LegendDisplayMode": {
        "enum": [
          "list",
          "table",
          "hidden"
        ],
        "description": "TODO docs\nNote: \"hidden\" needs to remain as an option for plugins compatibility"
      },
      "LegendPlacement": {
        "enum": [
          "bottom",
          "right"
        ],
        "description": "TODO docs"
      },
      "TooltipDisplayMode": {
        "enum": [
          "single",
          "multi",
          "none"
        ],
        "description": "TODO docs"
      },
      "SortOrder": {
        "enum": [
          "asc",
          "desc",
          "none"
        ],
        "description": "TODO docs"
      },
      "ScaleDistribution": {
        "enum": [
          "linear",
          "log",
          "ordinal",
          "symlog"
        ],
        "description": "TODO docs"
      },
      "StackingMode": {
        "enum": [
          "none",
          "normal",
          "percent"
        ],
        "description": "TODO docs"
      }
    }
  }
}