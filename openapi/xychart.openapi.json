{
  "openapi": "3.0.0",
  "info": {
    "title": "xychart",
    "version": "0.0.0",
    "x-schema-identifier": "xychart",
    "x-schema-kind": "composable",
    "x-schema-variant": "panelcfg"
  },
  "paths": {},
  "components": {
    "schemas": {
      "PointShape": {
        "enum": [
          "circle",
          "square"
        ]
      },
      "SeriesMapping": {
        "enum": [
          "auto",
          "manual"
        ]
      },
      "XYShowMode": {
        "enum": [
          "points",
          "lines",
          "points+lines"
        ]
      },
      "MatcherConfig": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "The matcher id. This is used to find the matcher implementation from registry.",
            "default": ""
          },
          "options": {
            "type": "object",
            "additionalProperties": {},
            "description": "The matcher options. This is specific to the matcher implementation."
          }
        },
        "description": "NOTE: (copied from dashboard_kind.cue, since not exported)\nMatcher is a predicate configuration. Based on the config a set of field(s) or values is filtered in order to apply override / transformation.\nIt comes with in id ( to resolve implementation from registry) and a configuration thatâ€™s specific to a particular matcher type."
      },
      "FieldConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "show": {
            "$ref": "#/components/schemas/XYShowMode",
            "default": "points"
          },
          "pointSize": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "fixed": {
                "type": "integer",
                "minimum": 0
              },
              "min": {
                "type": "integer",
                "minimum": 0
              },
              "max": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "pointShape": {
            "$ref": "#/components/schemas/PointShape"
          },
          "pointStrokeWidth": {
            "type": "integer",
            "minimum": 0
          },
          "fillOpacity": {
            "type": "integer",
            "maximum": 100,
            "default": 50
          },
          "lineWidth": {
            "type": "integer",
            "minimum": 0
          },
          "hideFrom": {
            "$ref": "#/components/schemas/HideSeriesConfig"
          },
          "axisPlacement": {
            "$ref": "#/components/schemas/AxisPlacement"
          },
          "axisColorMode": {
            "$ref": "#/components/schemas/AxisColorMode"
          },
          "axisLabel": {
            "type": "string"
          },
          "axisWidth": {
            "type": "number"
          },
          "axisSoftMin": {
            "type": "number"
          },
          "axisSoftMax": {
            "type": "number"
          },
          "axisGridShow": {
            "type": "boolean"
          },
          "scaleDistribution": {
            "$ref": "#/components/schemas/ScaleDistributionConfig"
          },
          "axisCenteredZero": {
            "type": "boolean"
          },
          "lineStyle": {
            "$ref": "#/components/schemas/LineStyle"
          },
          "axisBorderShow": {
            "type": "boolean"
          }
        }
      },
      "XYSeriesConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "fixed": {
                "type": "string"
              }
            }
          },
          "frame": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matcher"
            ],
            "properties": {
              "matcher": {
                "$ref": "#/components/schemas/MatcherConfig"
              }
            }
          },
          "x": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matcher"
            ],
            "properties": {
              "matcher": {
                "$ref": "#/components/schemas/MatcherConfig"
              }
            }
          },
          "y": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matcher"
            ],
            "properties": {
              "matcher": {
                "$ref": "#/components/schemas/MatcherConfig"
              }
            }
          },
          "color": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matcher"
            ],
            "properties": {
              "matcher": {
                "$ref": "#/components/schemas/MatcherConfig"
              }
            }
          },
          "size": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matcher"
            ],
            "properties": {
              "matcher": {
                "$ref": "#/components/schemas/MatcherConfig"
              }
            }
          }
        }
      },
      "Options": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "mapping",
          "legend",
          "tooltip",
          "series"
        ],
        "properties": {
          "mapping": {
            "$ref": "#/components/schemas/SeriesMapping"
          },
          "legend": {
            "$ref": "#/components/schemas/VizLegendOptions"
          },
          "tooltip": {
            "$ref": "#/components/schemas/VizTooltipOptions"
          },
          "series": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/XYSeriesConfig"
            }
          }
        }
      },
      "HideSeriesConfig": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "tooltip",
          "legend",
          "viz"
        ],
        "properties": {
          "tooltip": {
            "type": "boolean"
          },
          "legend": {
            "type": "boolean"
          },
          "viz": {
            "type": "boolean"
          }
        },
        "description": "TODO docs"
      },
      "AxisPlacement": {
        "enum": [
          "auto",
          "top",
          "right",
          "bottom",
          "left",
          "hidden"
        ],
        "description": "TODO docs"
      },
      "AxisColorMode": {
        "enum": [
          "text",
          "series"
        ],
        "description": "TODO docs"
      },
      "ScaleDistributionConfig": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "$ref": "#/components/schemas/ScaleDistribution"
          },
          "log": {
            "type": "number"
          },
          "linearThreshold": {
            "type": "number"
          }
        },
        "description": "TODO docs"
      },
      "LineStyle": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "fill": {
            "enum": [
              "solid",
              "dash",
              "dot",
              "square"
            ]
          },
          "dash": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        },
        "description": "TODO docs"
      },
      "VizLegendOptions": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "displayMode",
          "placement",
          "showLegend",
          "calcs"
        ],
        "properties": {
          "displayMode": {
            "$ref": "#/components/schemas/LegendDisplayMode",
            "default": "list"
          },
          "placement": {
            "$ref": "#/components/schemas/LegendPlacement",
            "default": "bottom"
          },
          "showLegend": {
            "type": "boolean"
          },
          "asTable": {
            "type": "boolean"
          },
          "isVisible": {
            "type": "boolean"
          },
          "sortBy": {
            "type": "string"
          },
          "sortDesc": {
            "type": "boolean"
          },
          "width": {
            "type": "number"
          },
          "calcs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        },
        "description": "TODO docs"
      },
      "VizTooltipOptions": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "mode",
          "sort"
        ],
        "properties": {
          "mode": {
            "$ref": "#/components/schemas/TooltipDisplayMode"
          },
          "sort": {
            "$ref": "#/components/schemas/SortOrder"
          },
          "maxWidth": {
            "type": "number"
          },
          "maxHeight": {
            "type": "number"
          }
        },
        "description": "TODO docs"
      },
      "ScaleDistribution": {
        "enum": [
          "linear",
          "log",
          "ordinal",
          "symlog"
        ],
        "description": "TODO docs"
      },
      "LegendDisplayMode": {
        "enum": [
          "list",
          "table",
          "hidden"
        ],
        "description": "TODO docs\nNote: \"hidden\" needs to remain as an option for plugins compatibility"
      },
      "LegendPlacement": {
        "enum": [
          "bottom",
          "right"
        ],
        "description": "TODO docs"
      },
      "TooltipDisplayMode": {
        "enum": [
          "single",
          "multi",
          "none"
        ],
        "description": "TODO docs"
      },
      "SortOrder": {
        "enum": [
          "asc",
          "desc",
          "none"
        ],
        "description": "TODO docs"
      }
    }
  }
}