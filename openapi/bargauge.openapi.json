{
  "openapi": "3.0.0",
  "info": {
    "title": "bargauge",
    "version": "0.0.0",
    "x-schema-identifier": "bargauge",
    "x-schema-kind": "composable",
    "x-schema-variant": "panelcfg"
  },
  "paths": {},
  "components": {
    "schemas": {
      "Options": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "displayMode",
          "valueMode",
          "namePlacement",
          "showUnfilled",
          "sizing",
          "minVizWidth",
          "minVizHeight",
          "reduceOptions",
          "maxVizHeight",
          "orientation"
        ],
        "properties": {
          "displayMode": {
            "$ref": "#/components/schemas/BarGaugeDisplayMode",
            "default": "gradient"
          },
          "valueMode": {
            "$ref": "#/components/schemas/BarGaugeValueMode",
            "default": "color"
          },
          "namePlacement": {
            "$ref": "#/components/schemas/BarGaugeNamePlacement",
            "default": "auto"
          },
          "showUnfilled": {
            "type": "boolean",
            "default": true
          },
          "sizing": {
            "$ref": "#/components/schemas/BarGaugeSizing",
            "default": "auto"
          },
          "minVizWidth": {
            "type": "integer",
            "default": 8
          },
          "minVizHeight": {
            "type": "integer",
            "default": 16
          },
          "reduceOptions": {
            "$ref": "#/components/schemas/ReduceDataOptions"
          },
          "text": {
            "$ref": "#/components/schemas/VizTextDisplayOptions"
          },
          "maxVizHeight": {
            "type": "integer",
            "default": 300
          },
          "orientation": {
            "$ref": "#/components/schemas/VizOrientation"
          }
        }
      },
      "BarGaugeDisplayMode": {
        "enum": [
          "basic",
          "lcd",
          "gradient"
        ],
        "type": "string",
        "description": "Enum expressing the possible display modes\nfor the bar gauge component of Grafana UI"
      },
      "BarGaugeValueMode": {
        "enum": [
          "color",
          "text",
          "hidden"
        ],
        "type": "string",
        "description": "Allows for the table cell gauge display type to set the gauge mode."
      },
      "BarGaugeNamePlacement": {
        "enum": [
          "auto",
          "top",
          "left"
        ],
        "type": "string",
        "description": "Allows for the bar gauge name to be placed explicitly"
      },
      "BarGaugeSizing": {
        "enum": [
          "auto",
          "manual"
        ],
        "type": "string",
        "description": "Allows for the bar gauge size to be set explicitly"
      },
      "ReduceDataOptions": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "calcs"
        ],
        "properties": {
          "values": {
            "type": "boolean",
            "description": "If true show each row value"
          },
          "limit": {
            "type": "number",
            "description": "if showing all values limit"
          },
          "calcs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "When !values, pick one value for the whole field"
          },
          "fields": {
            "type": "string",
            "description": "Which fields to show.  By default this is only numeric fields"
          }
        },
        "description": "TODO docs"
      },
      "VizTextDisplayOptions": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "titleSize": {
            "type": "number",
            "description": "Explicit title text size"
          },
          "valueSize": {
            "type": "number",
            "description": "Explicit value text size"
          }
        },
        "description": "TODO docs"
      },
      "VizOrientation": {
        "enum": [
          "auto",
          "vertical",
          "horizontal"
        ],
        "type": "string",
        "description": "TODO docs"
      }
    }
  }
}