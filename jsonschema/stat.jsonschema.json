{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "graphMode",
        "colorMode",
        "justifyMode",
        "textMode",
        "reduceOptions",
        "wideLayout",
        "orientation"
      ],
      "properties": {
        "graphMode": {
          "$ref": "#/definitions/BigValueGraphMode",
          "default": "area"
        },
        "colorMode": {
          "$ref": "#/definitions/BigValueColorMode",
          "default": "value"
        },
        "justifyMode": {
          "$ref": "#/definitions/BigValueJustifyMode",
          "default": "auto"
        },
        "textMode": {
          "$ref": "#/definitions/BigValueTextMode",
          "default": "auto"
        },
        "reduceOptions": {
          "$ref": "#/definitions/ReduceDataOptions"
        },
        "text": {
          "$ref": "#/definitions/VizTextDisplayOptions"
        },
        "wideLayout": {
          "type": "boolean",
          "default": true
        },
        "orientation": {
          "$ref": "#/definitions/VizOrientation"
        }
      }
    },
    "BigValueGraphMode": {
      "enum": [
        "none",
        "line",
        "area"
      ],
      "description": "TODO docs"
    },
    "BigValueColorMode": {
      "enum": [
        "value",
        "background",
        "background_solid",
        "none"
      ],
      "description": "TODO docs"
    },
    "BigValueJustifyMode": {
      "enum": [
        "auto",
        "center"
      ],
      "description": "TODO docs"
    },
    "BigValueTextMode": {
      "enum": [
        "auto",
        "value",
        "value_and_name",
        "name",
        "none"
      ],
      "description": "TODO docs"
    },
    "ReduceDataOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "calcs"
      ],
      "properties": {
        "values": {
          "type": "boolean",
          "description": "If true show each row value"
        },
        "limit": {
          "type": "number",
          "description": "if showing all values limit"
        },
        "calcs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "When !values, pick one value for the whole field"
        },
        "fields": {
          "type": "string",
          "description": "Which fields to show.  By default this is only numeric fields"
        }
      },
      "description": "TODO docs"
    },
    "VizTextDisplayOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "titleSize": {
          "type": "number",
          "description": "Explicit title text size"
        },
        "valueSize": {
          "type": "number",
          "description": "Explicit value text size"
        }
      },
      "description": "TODO docs"
    },
    "VizOrientation": {
      "enum": [
        "auto",
        "vertical",
        "horizontal"
      ],
      "description": "TODO docs"
    }
  }
}