{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "VizDisplayMode": {
      "enum": [
        "candles+volume",
        "candles",
        "volume"
      ],
      "type": "string"
    },
    "CandleStyle": {
      "enum": [
        "candles",
        "ohlcbars"
      ],
      "type": "string"
    },
    "ColorStrategy": {
      "enum": [
        "open-close",
        "close-close"
      ],
      "type": "string"
    },
    "CandlestickFieldMap": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "open": {
          "type": "string",
          "description": "Corresponds to the starting value of the given period"
        },
        "high": {
          "type": "string",
          "description": "Corresponds to the highest value of the given period"
        },
        "low": {
          "type": "string",
          "description": "Corresponds to the lowest value of the given period"
        },
        "close": {
          "type": "string",
          "description": "Corresponds to the final (end) value of the given period"
        },
        "volume": {
          "type": "string",
          "description": "Corresponds to the sample count in the given period. (e.g. number of trades)"
        }
      }
    },
    "CandlestickColors": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "up",
        "down",
        "flat"
      ],
      "properties": {
        "up": {
          "type": "string",
          "default": "green"
        },
        "down": {
          "type": "string",
          "default": "red"
        },
        "flat": {
          "type": "string",
          "default": "gray"
        }
      }
    },
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode",
        "candleStyle",
        "colorStrategy",
        "fields",
        "colors",
        "legend"
      ],
      "properties": {
        "mode": {
          "$ref": "#/definitions/VizDisplayMode",
          "description": "Sets which dimensions are used for the visualization",
          "default": "candles+volume"
        },
        "candleStyle": {
          "$ref": "#/definitions/CandleStyle",
          "description": "Sets the style of the candlesticks",
          "default": "candles"
        },
        "colorStrategy": {
          "$ref": "#/definitions/ColorStrategy",
          "description": "Sets the color strategy for the candlesticks",
          "default": "open-close"
        },
        "fields": {
          "$ref": "#/definitions/CandlestickFieldMap",
          "description": "Map fields to appropriate dimension"
        },
        "colors": {
          "$ref": "#/definitions/CandlestickColors",
          "description": "Set which colors are used when the price movement is up or down",
          "default": {
            "down": "red",
            "flat": "gray",
            "up": "green"
          }
        },
        "legend": {
          "$ref": "#/definitions/VizLegendOptions"
        },
        "includeAllFields": {
          "type": "boolean",
          "description": "When enabled, all fields will be sent to the graph",
          "default": false
        }
      }
    },
    "FieldConfig": {
      "$ref": "#/definitions/GraphFieldConfig"
    },
    "VizLegendOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "displayMode",
        "placement",
        "showLegend",
        "calcs"
      ],
      "properties": {
        "displayMode": {
          "$ref": "#/definitions/LegendDisplayMode",
          "default": "list"
        },
        "placement": {
          "$ref": "#/definitions/LegendPlacement",
          "default": "bottom"
        },
        "showLegend": {
          "type": "boolean"
        },
        "asTable": {
          "type": "boolean"
        },
        "isVisible": {
          "type": "boolean"
        },
        "sortBy": {
          "type": "string"
        },
        "sortDesc": {
          "type": "boolean"
        },
        "width": {
          "type": "number"
        },
        "calcs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "description": "TODO docs"
    },
    "GraphFieldConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "drawStyle": {
          "$ref": "#/definitions/GraphDrawStyle"
        },
        "gradientMode": {
          "$ref": "#/definitions/GraphGradientMode"
        },
        "thresholdsStyle": {
          "$ref": "#/definitions/GraphThresholdsStyleConfig"
        },
        "lineColor": {
          "type": "string"
        },
        "lineWidth": {
          "type": "number"
        },
        "lineInterpolation": {
          "$ref": "#/definitions/LineInterpolation"
        },
        "lineStyle": {
          "$ref": "#/definitions/LineStyle"
        },
        "fillColor": {
          "type": "string"
        },
        "fillOpacity": {
          "type": "number"
        },
        "showPoints": {
          "$ref": "#/definitions/VisibilityMode"
        },
        "pointSize": {
          "type": "number"
        },
        "pointColor": {
          "type": "string"
        },
        "axisPlacement": {
          "$ref": "#/definitions/AxisPlacement"
        },
        "axisColorMode": {
          "$ref": "#/definitions/AxisColorMode"
        },
        "axisLabel": {
          "type": "string"
        },
        "axisWidth": {
          "type": "number"
        },
        "axisSoftMin": {
          "type": "number"
        },
        "axisSoftMax": {
          "type": "number"
        },
        "axisGridShow": {
          "type": "boolean"
        },
        "scaleDistribution": {
          "$ref": "#/definitions/ScaleDistributionConfig"
        },
        "axisCenteredZero": {
          "type": "boolean"
        },
        "barAlignment": {
          "$ref": "#/definitions/BarAlignment"
        },
        "barWidthFactor": {
          "type": "number"
        },
        "stacking": {
          "$ref": "#/definitions/StackingConfig"
        },
        "hideFrom": {
          "$ref": "#/definitions/HideSeriesConfig"
        },
        "transform": {
          "$ref": "#/definitions/GraphTransform"
        },
        "spanNulls": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "number"
            }
          ],
          "description": "Indicate if null values should be treated as gaps or connected.\nWhen the value is a number, it represents the maximum delta in the\nX axis that should be considered connected.  For timeseries, this is milliseconds"
        },
        "fillBelowTo": {
          "type": "string"
        },
        "pointSymbol": {
          "type": "string"
        },
        "axisBorderShow": {
          "type": "boolean"
        },
        "barMaxWidth": {
          "type": "number"
        },
        "insertNulls": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "integer"
            }
          ]
        }
      },
      "description": "TODO docs"
    },
    "LegendDisplayMode": {
      "enum": [
        "list",
        "table",
        "hidden"
      ],
      "type": "string",
      "description": "TODO docs\nNote: \"hidden\" needs to remain as an option for plugins compatibility"
    },
    "LegendPlacement": {
      "enum": [
        "bottom",
        "right"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "GraphDrawStyle": {
      "enum": [
        "line",
        "bars",
        "points"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "GraphGradientMode": {
      "enum": [
        "none",
        "opacity",
        "hue",
        "scheme"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "GraphThresholdsStyleConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "$ref": "#/definitions/GraphTresholdsStyleMode"
        }
      },
      "description": "TODO docs"
    },
    "LineInterpolation": {
      "enum": [
        "linear",
        "smooth",
        "stepBefore",
        "stepAfter"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "LineStyle": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fill": {
          "enum": [
            "solid",
            "dash",
            "dot",
            "square"
          ],
          "type": "string"
        },
        "dash": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "description": "TODO docs"
    },
    "VisibilityMode": {
      "enum": [
        "auto",
        "never",
        "always"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "AxisPlacement": {
      "enum": [
        "auto",
        "top",
        "right",
        "bottom",
        "left",
        "hidden"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "AxisColorMode": {
      "enum": [
        "text",
        "series"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "ScaleDistributionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/ScaleDistribution"
        },
        "log": {
          "type": "number"
        },
        "linearThreshold": {
          "type": "number"
        }
      },
      "description": "TODO docs"
    },
    "BarAlignment": {
      "enum": [
        -1,
        0,
        1
      ],
      "type": "integer",
      "description": "TODO docs"
    },
    "StackingConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "$ref": "#/definitions/StackingMode"
        },
        "group": {
          "type": "string"
        }
      },
      "description": "TODO docs"
    },
    "HideSeriesConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tooltip",
        "legend",
        "viz"
      ],
      "properties": {
        "tooltip": {
          "type": "boolean"
        },
        "legend": {
          "type": "boolean"
        },
        "viz": {
          "type": "boolean"
        }
      },
      "description": "TODO docs"
    },
    "GraphTransform": {
      "enum": [
        "constant",
        "negative-Y"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "GraphTresholdsStyleMode": {
      "enum": [
        "off",
        "line",
        "dashed",
        "area",
        "line+area",
        "dashed+area",
        "series"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "ScaleDistribution": {
      "enum": [
        "linear",
        "log",
        "ordinal",
        "symlog"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "StackingMode": {
      "enum": [
        "none",
        "normal",
        "percent"
      ],
      "type": "string",
      "description": "TODO docs"
    }
  }
}