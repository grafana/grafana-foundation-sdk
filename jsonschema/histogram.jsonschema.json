{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "legend",
        "tooltip"
      ],
      "properties": {
        "bucketCount": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "description": "Bucket count (approx)",
          "default": 30
        },
        "bucketSize": {
          "type": "integer",
          "description": "Size of each bucket"
        },
        "bucketOffset": {
          "type": "number",
          "description": "Offset buckets by this amount",
          "default": 0
        },
        "legend": {
          "$ref": "#/definitions/VizLegendOptions"
        },
        "tooltip": {
          "$ref": "#/definitions/VizTooltipOptions"
        },
        "combine": {
          "type": "boolean",
          "description": "Combines multiple series into a single histogram"
        }
      }
    },
    "FieldConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lineWidth": {
          "type": "integer",
          "maximum": 10,
          "description": "Controls line width of the bars.",
          "default": 1
        },
        "fillOpacity": {
          "type": "integer",
          "maximum": 100,
          "description": "Controls the fill opacity of the bars.",
          "default": 80
        },
        "axisPlacement": {
          "$ref": "#/definitions/AxisPlacement"
        },
        "axisColorMode": {
          "$ref": "#/definitions/AxisColorMode"
        },
        "axisLabel": {
          "type": "string"
        },
        "axisWidth": {
          "type": "number"
        },
        "axisSoftMin": {
          "type": "number"
        },
        "axisSoftMax": {
          "type": "number"
        },
        "axisGridShow": {
          "type": "boolean"
        },
        "scaleDistribution": {
          "$ref": "#/definitions/ScaleDistributionConfig"
        },
        "axisCenteredZero": {
          "type": "boolean"
        },
        "hideFrom": {
          "$ref": "#/definitions/HideSeriesConfig"
        },
        "stacking": {
          "$ref": "#/definitions/StackingConfig"
        },
        "gradientMode": {
          "$ref": "#/definitions/GraphGradientMode",
          "description": "Set the mode of the gradient fill. Fill gradient is based on the line color. To change the color, use the standard color scheme field option.\nGradient appearance is influenced by the Fill opacity setting.",
          "default": "none"
        },
        "axisBorderShow": {
          "type": "boolean"
        }
      }
    },
    "VizLegendOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "displayMode",
        "placement",
        "showLegend",
        "calcs"
      ],
      "properties": {
        "displayMode": {
          "$ref": "#/definitions/LegendDisplayMode",
          "default": "list"
        },
        "placement": {
          "$ref": "#/definitions/LegendPlacement",
          "default": "bottom"
        },
        "showLegend": {
          "type": "boolean"
        },
        "asTable": {
          "type": "boolean"
        },
        "isVisible": {
          "type": "boolean"
        },
        "sortBy": {
          "type": "string"
        },
        "sortDesc": {
          "type": "boolean"
        },
        "width": {
          "type": "number"
        },
        "calcs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "description": "TODO docs"
    },
    "VizTooltipOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode",
        "sort"
      ],
      "properties": {
        "mode": {
          "$ref": "#/definitions/TooltipDisplayMode"
        },
        "sort": {
          "$ref": "#/definitions/SortOrder"
        },
        "maxWidth": {
          "type": "number"
        },
        "maxHeight": {
          "type": "number"
        }
      },
      "description": "TODO docs"
    },
    "AxisPlacement": {
      "enum": [
        "auto",
        "top",
        "right",
        "bottom",
        "left",
        "hidden"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "AxisColorMode": {
      "enum": [
        "text",
        "series"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "ScaleDistributionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/ScaleDistribution"
        },
        "log": {
          "type": "number"
        },
        "linearThreshold": {
          "type": "number"
        }
      },
      "description": "TODO docs"
    },
    "HideSeriesConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tooltip",
        "legend",
        "viz"
      ],
      "properties": {
        "tooltip": {
          "type": "boolean"
        },
        "legend": {
          "type": "boolean"
        },
        "viz": {
          "type": "boolean"
        }
      },
      "description": "TODO docs"
    },
    "StackingConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "$ref": "#/definitions/StackingMode"
        },
        "group": {
          "type": "string"
        }
      },
      "description": "TODO docs"
    },
    "GraphGradientMode": {
      "enum": [
        "none",
        "opacity",
        "hue",
        "scheme"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "LegendDisplayMode": {
      "enum": [
        "list",
        "table",
        "hidden"
      ],
      "type": "string",
      "description": "TODO docs\nNote: \"hidden\" needs to remain as an option for plugins compatibility"
    },
    "LegendPlacement": {
      "enum": [
        "bottom",
        "right"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "TooltipDisplayMode": {
      "enum": [
        "single",
        "multi",
        "none"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "SortOrder": {
      "enum": [
        "asc",
        "desc",
        "none"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "ScaleDistribution": {
      "enum": [
        "linear",
        "log",
        "ordinal",
        "symlog"
      ],
      "type": "string",
      "description": "TODO docs"
    },
    "StackingMode": {
      "enum": [
        "none",
        "normal",
        "percent"
      ],
      "type": "string",
      "description": "TODO docs"
    }
  }
}