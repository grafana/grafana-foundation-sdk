{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SeriesMapping": {
      "enum": [
        "auto",
        "manual"
      ]
    },
    "ScatterShow": {
      "enum": [
        "points",
        "lines",
        "points+lines"
      ]
    },
    "XYDimensionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "frame"
      ],
      "properties": {
        "frame": {
          "type": "integer",
          "minimum": 0
        },
        "x": {
          "type": "string"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "FieldConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "show": {
          "$ref": "#/definitions/ScatterShow",
          "default": "points"
        },
        "pointSize": {
          "$ref": "#/definitions/ScaleDimensionConfig"
        },
        "pointColor": {
          "$ref": "#/definitions/ColorDimensionConfig"
        },
        "lineColor": {
          "$ref": "#/definitions/ColorDimensionConfig"
        },
        "lineWidth": {
          "type": "integer",
          "minimum": 0
        },
        "lineStyle": {
          "$ref": "#/definitions/LineStyle"
        },
        "label": {
          "$ref": "#/definitions/VisibilityMode",
          "default": "auto"
        },
        "hideFrom": {
          "$ref": "#/definitions/HideSeriesConfig"
        },
        "axisPlacement": {
          "$ref": "#/definitions/AxisPlacement"
        },
        "axisColorMode": {
          "$ref": "#/definitions/AxisColorMode"
        },
        "axisLabel": {
          "type": "string"
        },
        "axisWidth": {
          "type": "number"
        },
        "axisSoftMin": {
          "type": "number"
        },
        "axisSoftMax": {
          "type": "number"
        },
        "axisGridShow": {
          "type": "boolean"
        },
        "scaleDistribution": {
          "$ref": "#/definitions/ScaleDistributionConfig"
        },
        "labelValue": {
          "$ref": "#/definitions/TextDimensionConfig"
        },
        "axisCenteredZero": {
          "type": "boolean"
        }
      }
    },
    "ScatterSeriesConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "string"
        },
        "y": {
          "type": "string"
        },
        "show": {
          "$ref": "#/definitions/ScatterShow",
          "default": "points"
        },
        "pointSize": {
          "$ref": "#/definitions/ScaleDimensionConfig"
        },
        "pointColor": {
          "$ref": "#/definitions/ColorDimensionConfig"
        },
        "lineColor": {
          "$ref": "#/definitions/ColorDimensionConfig"
        },
        "lineWidth": {
          "type": "integer",
          "minimum": 0
        },
        "lineStyle": {
          "$ref": "#/definitions/LineStyle"
        },
        "label": {
          "$ref": "#/definitions/VisibilityMode",
          "default": "auto"
        },
        "hideFrom": {
          "$ref": "#/definitions/HideSeriesConfig"
        },
        "axisPlacement": {
          "$ref": "#/definitions/AxisPlacement"
        },
        "axisColorMode": {
          "$ref": "#/definitions/AxisColorMode"
        },
        "axisLabel": {
          "type": "string"
        },
        "axisWidth": {
          "type": "number"
        },
        "axisSoftMin": {
          "type": "number"
        },
        "axisSoftMax": {
          "type": "number"
        },
        "axisGridShow": {
          "type": "boolean"
        },
        "scaleDistribution": {
          "$ref": "#/definitions/ScaleDistributionConfig"
        },
        "name": {
          "type": "string"
        },
        "labelValue": {
          "$ref": "#/definitions/TextDimensionConfig"
        },
        "axisCenteredZero": {
          "type": "boolean"
        }
      }
    },
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dims",
        "legend",
        "tooltip",
        "series"
      ],
      "properties": {
        "seriesMapping": {
          "$ref": "#/definitions/SeriesMapping"
        },
        "dims": {
          "$ref": "#/definitions/XYDimensionConfig"
        },
        "legend": {
          "$ref": "#/definitions/VizLegendOptions"
        },
        "tooltip": {
          "$ref": "#/definitions/VizTooltipOptions"
        },
        "series": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ScatterSeriesConfig"
          }
        }
      }
    },
    "ScaleDimensionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "min",
        "max"
      ],
      "properties": {
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "fixed": {
          "type": "number"
        },
        "field": {
          "type": "string",
          "description": "fixed: T -- will be added by each element"
        },
        "mode": {
          "$ref": "#/definitions/ScaleDimensionMode",
          "description": "| *\"linear\""
        }
      }
    },
    "ColorDimensionConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fixed": {
          "type": "string",
          "description": "color value"
        },
        "field": {
          "type": "string",
          "description": "fixed: T -- will be added by each element"
        }
      }
    },
    "LineStyle": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fill": {
          "enum": [
            "solid",
            "dash",
            "dot",
            "square"
          ]
        },
        "dash": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "description": "TODO docs"
    },
    "VisibilityMode": {
      "enum": [
        "auto",
        "never",
        "always"
      ],
      "description": "TODO docs"
    },
    "HideSeriesConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tooltip",
        "legend",
        "viz"
      ],
      "properties": {
        "tooltip": {
          "type": "boolean"
        },
        "legend": {
          "type": "boolean"
        },
        "viz": {
          "type": "boolean"
        }
      },
      "description": "TODO docs"
    },
    "AxisPlacement": {
      "enum": [
        "auto",
        "top",
        "right",
        "bottom",
        "left",
        "hidden"
      ],
      "description": "TODO docs"
    },
    "AxisColorMode": {
      "enum": [
        "text",
        "series"
      ],
      "description": "TODO docs"
    },
    "ScaleDistributionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/ScaleDistribution"
        },
        "log": {
          "type": "number"
        },
        "linearThreshold": {
          "type": "number"
        }
      },
      "description": "TODO docs"
    },
    "TextDimensionConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "$ref": "#/definitions/TextDimensionMode"
        },
        "field": {
          "type": "string",
          "description": "fixed: T -- will be added by each element"
        },
        "fixed": {
          "type": "string"
        }
      }
    },
    "VizLegendOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "displayMode",
        "placement",
        "showLegend",
        "calcs"
      ],
      "properties": {
        "displayMode": {
          "$ref": "#/definitions/LegendDisplayMode",
          "default": "list"
        },
        "placement": {
          "$ref": "#/definitions/LegendPlacement",
          "default": "bottom"
        },
        "showLegend": {
          "type": "boolean"
        },
        "asTable": {
          "type": "boolean"
        },
        "isVisible": {
          "type": "boolean"
        },
        "sortBy": {
          "type": "string"
        },
        "sortDesc": {
          "type": "boolean"
        },
        "width": {
          "type": "number"
        },
        "calcs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "description": "TODO docs"
    },
    "VizTooltipOptions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode",
        "sort"
      ],
      "properties": {
        "mode": {
          "$ref": "#/definitions/TooltipDisplayMode"
        },
        "sort": {
          "$ref": "#/definitions/SortOrder"
        }
      },
      "description": "TODO docs"
    },
    "ScaleDimensionMode": {
      "enum": [
        "linear",
        "quad"
      ]
    },
    "ScaleDistribution": {
      "enum": [
        "linear",
        "log",
        "ordinal",
        "symlog"
      ],
      "description": "TODO docs"
    },
    "TextDimensionMode": {
      "enum": [
        "fixed",
        "field",
        "template"
      ]
    },
    "LegendDisplayMode": {
      "enum": [
        "list",
        "table",
        "hidden"
      ],
      "description": "TODO docs\nNote: \"hidden\" needs to remain as an option for plugins compatibility"
    },
    "LegendPlacement": {
      "enum": [
        "bottom",
        "right"
      ],
      "description": "TODO docs"
    },
    "TooltipDisplayMode": {
      "enum": [
        "single",
        "multi",
        "none"
      ],
      "description": "TODO docs"
    },
    "SortOrder": {
      "enum": [
        "asc",
        "desc",
        "none"
      ],
      "description": "TODO docs"
    }
  }
}