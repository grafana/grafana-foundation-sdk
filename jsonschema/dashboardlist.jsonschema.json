{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "keepTime",
        "includeVars",
        "showStarred",
        "showRecentlyViewed",
        "showSearch",
        "showHeadings",
        "maxItems",
        "query",
        "tags"
      ],
      "properties": {
        "keepTime": {
          "type": "boolean",
          "default": false
        },
        "includeVars": {
          "type": "boolean",
          "default": false
        },
        "showStarred": {
          "type": "boolean",
          "default": true
        },
        "showRecentlyViewed": {
          "type": "boolean",
          "default": false
        },
        "showSearch": {
          "type": "boolean",
          "default": false
        },
        "showHeadings": {
          "type": "boolean",
          "default": true
        },
        "maxItems": {
          "type": "integer",
          "default": 10
        },
        "query": {
          "type": "string",
          "default": ""
        },
        "folderId": {
          "type": "integer"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}