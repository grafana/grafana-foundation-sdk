{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/RoleBinding",
  "definitions": {
    "RoleBinding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "role",
        "subject"
      ],
      "properties": {
        "role": {
          "anyOf": [
            {
              "$ref": "#/definitions/BuiltinRoleRef"
            },
            {
              "$ref": "#/definitions/CustomRoleRef"
            }
          ],
          "description": "The role we are discussing"
        },
        "subject": {
          "$ref": "#/definitions/RoleBindingSubject",
          "description": "The team or user that has the specified role"
        }
      }
    },
    "BuiltinRoleRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "name"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "BuiltinRole"
        },
        "name": {
          "enum": [
            "viewer",
            "editor",
            "admin"
          ],
          "type": "string"
        }
      }
    },
    "CustomRoleRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "name"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "Role"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "RoleBindingSubject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "name"
      ],
      "properties": {
        "kind": {
          "enum": [
            "Team",
            "User"
          ],
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "The team/user identifier name"
        }
      }
    }
  }
}