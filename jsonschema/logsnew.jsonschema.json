{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "showControls",
        "showTime",
        "wrapLogMessage",
        "enableLogDetails",
        "syntaxHighlighting",
        "sortOrder",
        "dedupStrategy"
      ],
      "properties": {
        "showControls": {
          "type": "boolean"
        },
        "showTime": {
          "type": "boolean"
        },
        "wrapLogMessage": {
          "type": "boolean"
        },
        "enableLogDetails": {
          "type": "boolean"
        },
        "syntaxHighlighting": {
          "type": "boolean"
        },
        "sortOrder": {
          "$ref": "#/definitions/LogsSortOrder"
        },
        "dedupStrategy": {
          "$ref": "#/definitions/LogsDedupStrategy"
        },
        "grammar": {
          "type": "object",
          "additionalProperties": {}
        },
        "enableInfiniteScrolling": {
          "type": "boolean"
        },
        "onLogOptionsChange": {
          "type": "object",
          "additionalProperties": {}
        },
        "onNewLogsReceived": {
          "type": "object",
          "additionalProperties": {}
        }
      }
    },
    "LogsSortOrder": {
      "enum": [
        "Descending",
        "Ascending"
      ],
      "type": "string"
    },
    "LogsDedupStrategy": {
      "enum": [
        "none",
        "exact",
        "numbers",
        "signature"
      ],
      "type": "string"
    }
  }
}